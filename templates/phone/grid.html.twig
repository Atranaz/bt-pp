{% extends 'base.html.twig' %}

{% block body %}
  <div class="text-center mt-5">
    <h1>
      Phone List
    </h1>
    <p class="lead">
      Top ten best mobile by GSM Arena
    </p>

    <hr />
    <div class="row row-cols-1 row-cols-lg-4 row-cols-md-2 g-4">
      {% for d in data %}
        <div class="col">
          <div class="card">
            <img src="https://via.placeholder.com/150"
              class="card-img-top"
              alt="..." />
            <div class="card-body text-center">
              <h5 class="card-title">
                {{ d.name }}
              </h5>
              <a class="btn btn-primary"
                href="{{
                path(
                  'phone_detail',
                  {
                    slug: d.url
                  }
                )
                }}">
                Read more
              </a>
            </div>
          </div>
        </div>
      {% else %}
        <li><em>no user foun d</em></li>
      {% endfor %}
    </div>
  </div>
{% endblock %}
